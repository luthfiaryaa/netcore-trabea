@model ScheduleIndexViewModel

@section title {
    <h2>Schedule Index</h2>
}
<section>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Days</th>
                <th>Shift 1</th>
                <th>Shift 2</th>
                <th>Shift 3</th>
                <th>Shift 4</th>

            </tr>
        </thead>
        <tbody>
         @foreach (var data in Model.Schedules) {
            <tr>
                <td>@data.ScheduleDate.ToString("dddd")</td>
                    @if (data.Shift1 != null && data.Shift1.Any()) {
                        @foreach (var s1 in data.Shift1) {
                            <td>
                                @(s1.FullName ?? "Some Default Value")
                            </td>
                        }
                    } else {
                        <td>No PartTime</td>
                    }
                    @if (data.Shift2 != null && data.Shift2.Any()) {
                        @foreach (var s2 in data.Shift2) {
                            <td>
                                @(s2.FullName ?? "Some Default Value")
                            </td>
                        }
                    } else {
                        <td>No PartTime</td>
                    }
                    @if (data.Shift3 != null && data.Shift3.Any()) {
                        @foreach (var s3 in data.Shift3) {
                            <td>
                                @(s3.FullName ?? "Some Default Value")
                            </td>
                        }
                    } else {
                        <td>No PartTime</td>
                    }
                    @if (data.Shift4 != null && data.Shift4.Any()) {
                        @foreach (var s4 in data.Shift4) {
                            <td>
                                @(s4.FullName ?? "Some Default Value")
                            </td>
                        }
                    } else {
                        <td>No PartTime</td>
                    }
            </tr>
         }
        </tbody>
     </table>
</section>
